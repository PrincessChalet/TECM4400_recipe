<div class="container">
<p id="notice"><%= notice %></p>


<h1>Recipes made easy</h1>
  <div class="row">
  <% @recipes.each do |recipe| %>
  <div class="col-md-4">
     <div class="recipe-box">
      <% if recipe.image? %>
       <%= link_to (image_tag recipe.image.url, class: "recipe-index"), recipe %>
      <% end %>
      
       <ul>
 
      <li><%= recipe.title %></li>
      <li><%= recipe.description %></li>
      <li><%= link_to 'Show', recipe, class: "btn btn-dark" %>
      <%= link_to 'Edit', edit_recipe_path(recipe), class: "btn btn-dark" %>
      <%= link_to 'Delete', recipe, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-dark" %> </li>
      </ul>
    </div>  
    <br>
   </div>
  <% end %>
</div> <!--/row-->
<br>

</div>